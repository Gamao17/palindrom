FUNCTION is_palindrom(str : STRING, i : INTEGER) : BOOLEAN
VAR
    j , n : INTEGER; 
BEGIN
    n := str.lengt;
    j = str.lengt-i-1;

FOR i FROM 0 TO n/2 STEP 1  DO
    IF (n <= 1) THEN
        return TRUE
    ELSE_IF (str[i] <> str[j]) THEN
        FALSE;
    ELSE
        return is_palindrom(str,i)
END_IF
END_FOR

END